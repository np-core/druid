FROM nvidia/cuda:11.0.3-cudnn8-devel-ubuntu20.04

ARG MINICONDA_VERSION=latest
ARG BRANCH="main"
ARG NUM_CORES=2

ENV PATH /opt/conda/bin:$PATH
RUN rm /bin/sh && ln -s /bin/bash /bin/sh

ENV DEBIAN_FRONTEND="noninteractive"
ENV TZ="Europe/London"

WORKDIR /root/
RUN apt-get update && apt-get install -y \
    wget \
    gcc \
    g++ \
    git \
    cmake \
    libgmp-dev \
    libmpfr-dev \
    libgmpxx4ldbl \
    libboost-dev \
    libboost-thread-dev \
    zip unzip patchelf && \
    apt-get clean


# Anaconda for BioConda
RUN wget --quiet https://repo.anaconda.com/miniconda/Miniconda3-${MINICONDA_VERSION}-Linux-x86_64.sh -O ~/miniconda.sh && \
    /bin/bash ~/miniconda.sh -b -p /opt/conda && \
    rm ~/miniconda.sh && \
    ln -s /opt/conda/etc/profile.d/conda.sh /etc/profile.d/conda.sh && \
    echo ". /opt/conda/etc/profile.d/conda.sh" >> ~/.bashrc && \
    echo "conda activate base" >> ~/.bashrc && \
    source ~/.bashrc

RUN git clone --single-branch -b $BRANCH https://github.com/PyMesh/PyMesh.git

ENV PYMESH_PATH /root/PyMesh
ENV NUM_CORES $NUM_CORES
WORKDIR $PYMESH_PATH

RUN git submodule update --init && \
    pip install -r $PYMESH_PATH/python/requirements.txt && \
    ./setup.py bdist_wheel && \
    rm -rf build_3.7 third_party/build && \
    python $PYMESH_PATH/docker/patches/patch_wheel.py dist/pymesh2*.whl && \
    pip install dist/pymesh2*.whl && \
    python -c "import pymesh; pymesh.test()"

RUN mkdir /src
WORKDIR /src

RUN apt-get update && apt-get install tar ffmpeg libsm6 libxext6 -y

RUN wget http://kinemage.biochem.duke.edu/php/downlode-3.php?filename=/../downloads/software/reduce31/reduce.3.23.130521.linuxi386.gz -O reduce.gz
RUN zcat reduce.gz > reduce && chmod +x reduce && mv reduce /usr/bin

RUN wget http://mgltools.scripps.edu/downloads/tars/releases/MSMSRELEASE/REL2.6.1/msms_i86_64Linux2_2.6.1.tar.gz
RUN tar xvf msms_i86_64Linux2_2.6.1.tar.gz && mv msms.x86_64Linux2.2.6.1 /usr/bin/msms && mv pdb_to_xyzr pdb_to_xyzrn /usr/bin

RUN git clone https://github.com/np-core/druid && cd druid && git checkout v0.1.0 && pip install .

RUN apt-get update && apt-get install unzip
RUN wget https://github.com/Electrostatics/apbs/releases/download/v3.0.0/APBS-3.0.0_Linux.zip
RUN unzip APBS-3.0.0_Linux.zip && mv APBS-3.0.0_Linux/bin/apbs /usr/bin

RUN pip install pdb2pqr

RUN mkdir /masif_dev
WORKDIR /masif_dev